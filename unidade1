# Função para calcular a média e verificar aprovação
def calcular_media_e_verificar_aprovacao(notas):
    media = sum(notas) / len(notas)
    print(f"Média: {media:.2f}")

    if media >= 7.0:
        print("Aluno aprovado!")
    else:
        print("Aluno reprovado.")

# Solicitar as notas do usuário
notas = []
quantidade_notas = int(input("Quantas notas você deseja inserir? "))

for i in range(quantidade_notas):
    nota = float(input(f"Digite a nota {i+1}: "))
    notas.append(nota)

# Chama a função para calcular a média e verificar aprovação
calcular_media_e_verificar_aprovacao(notas)
